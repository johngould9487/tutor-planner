<div class="navbar-app">
  <!-- Left Navigation -->
  <% if user_signed_in? %>
  <div class="navbar-left">
    <%= link_to root_path, class: "navbar-app-brand" do %>
      <%= image_tag "logo.png", height: 50 %>
    <% end %>
    <% if params['controller'] == 'students' && params['action'] == 'show' %>
    <div class="dropdown">
      <div class="navbar-link navbar-item dropdown-toggle" id="navbar-student-menu"
      data-toggle="dropdown"><%= @student.name %> <i class="fa fa-sort"></i></div>
      <ul class="dropdown-menu dropdown-menu-right navbar-dropdown-menu">
        <% current_user.students.each do |student| %>
        <li>
          <%= link_to student.name, student_path(student), class: "navbar-link" %>
        </li>
        <% end %>
      </ul>
    </div>
    <% else %>
      <%= link_to "Students", students_path, class: "navbar-item navbar-link" %>
    <% end %>
    <%= link_to "Calendar", "#", class: "navbar-item navbar-link" %>
  </div>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-right">

    <% if user_signed_in? %>
    <!-- Avatar with dropdown menu -->
      <div class="navbar-item">
        <div class="dropdown">
          <p class="fas fa-user-tie fa-2x" class="avatar dropdown-toggle" id="navbar-profile-menu"
          data-toggle="dropdown" ></p>
          <ul class="dropdown-menu dropdown-menu-right navbar-dropdown-menu">
            <li>
              <%= link_to "#" do %>
              <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
              <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-item navbar-link" %>
    <% end %>
  </div>
</div>

